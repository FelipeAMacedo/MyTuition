<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40.00dp"
        android:text="@string/prompt_exit_confirm"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLutaSairPontos"
        android:layout_width="309.00dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24.33dp"
        android:layout_marginTop="13dp"
        android:background="#DEE1E0"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAllCaps="true"
        android:textSize="18.33dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="309.00dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/btnLutaConfirmSair"
            android:layout_width="132dp"
            android:layout_height="36.67dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="0dp"
            android:background="@drawable/button_cancel_exit"
            android:padding="0dp"
            android:text="sair"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnLutaSairFicar"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="45dp"
            android:layout_toEndOf="@+id/btnLutaConfirmSair"
            android:background="@drawable/button_ok_blue"
            android:text="FICAR"
            android:textColor="#FFF"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>