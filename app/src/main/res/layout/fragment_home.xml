<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.felipemacedo.mytuition.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/alertButton"
            android:layout_width="42.67dp"
            android:layout_height="42.67dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="53dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/alarm" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="9.67dp"
        android:padding="0dp">

        <ProgressBar
            android:id="@+id/levelProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:progress="10"
            android:progressDrawable="@drawable/level_ring"
            android:rotation="-90" />

        <TextView
            android:id="@+id/txtHomeLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text=""
            android:textColor="#FFF"
            android:textSize="26.67sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="30dp"
            android:text="level"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </RelativeLayout>

</FrameLayout>
