<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="88.33dp"
        android:layout_marginBottom="14.33dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_item_licao">

            <RelativeLayout
                android:id="@+id/licao_status"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3.33dp"
                android:layout_marginTop="3.33dp"
                android:layout_marginLeft="3.33dp"
                android:background="#BBBBBB"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/txtNomeLicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="16.67sp"
                android:layout_toEndOf="@id/licao_status"
                android:text=""
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtQtdLicoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/txtNomeLicao"
                android:layout_below="@id/txtNomeLicao"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="16.67sp" />

            <ProgressBar
                android:id="@+id/progresso_da_licao"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10.33dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3.33dp"
                android:layout_marginRight="3.33dp"
                android:layout_toRightOf="@id/licao_status"
                android:progressDrawable="@drawable/licao_progressbar" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
