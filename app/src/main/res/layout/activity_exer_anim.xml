<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.felipemacedo.mytuition.ExerAnimActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/linearExerAnimContent">

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeExerAnimContent"
        android:layout_below="@+id/linearExerAnimContent" >
    </RelativeLayout>

    <EditText
        android:id="@+id/etExerAnimInValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/btnExerAnimInsert"
        android:layout_alignBottom="@+id/btnExerAnimInsert"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnExerAnimInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Inserir"
        android:layout_below="@+id/relativeExerAnimContent"
        android:layout_toEndOf="@+id/etExerAnimInValor"
        android:layout_marginStart="18dp" />

</RelativeLayout>
