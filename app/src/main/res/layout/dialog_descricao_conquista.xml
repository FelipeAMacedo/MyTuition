<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/dialog_conquista">

        <TextView
            android:id="@+id/tvTituloConquista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:fontFamily="@font/lato_d"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            tools:text="Título" />

        <View
            android:id="@+id/dialog_conquista_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/tvTituloConquista"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/dialog_conquista_divider_color" />

        <TextView
            android:id="@+id/tvDescricaoConquista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_conquista_divider"
            android:textSize="18sp"
            android:fontFamily="@font/lato_d"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            tools:text="Descrição que ocupa duas linhas" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_conquista_img_container"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_dialog_imagem_conquista">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_dialog_conquista"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>