<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felipemacedo.mytuition">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.felipemacedo.mytuition.MyTuition"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mytuition"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mytuition_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name="com.felipemacedo.mytuition.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.felipemacedo.mytuition.ConteudoActivity" />
        <activity android:name="com.felipemacedo.mytuition.ExerAnimActivity" />
        <activity android:name="com.felipemacedo.mytuition.MainActivity" />
        <activity android:name="com.felipemacedo.mytuition.RegisterActivity" />
        <activity
            android:name="com.felipemacedo.mytuition.LutaActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.felipemacedo.mytuition.MateriaActivity" />
    </application>

</manifest>